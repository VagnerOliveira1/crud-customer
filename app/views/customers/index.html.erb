
<h1>Customers</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.address %></td>
        <td><%= link_to 'Mostrar', customer ,class:" btn btn-light"%></td>
        <td><%= link_to 'Editar', edit_customer_path(customer) ,class:"btn btn-warning"%></td>
        <td><%= link_to 'Apagar', customer, method: :delete,class:"btn btn-danger" ,data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Customer', new_customer_path, class:"btn btn-info" %>
